{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ESNext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist/types/",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": false,
    "stripInternal": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
